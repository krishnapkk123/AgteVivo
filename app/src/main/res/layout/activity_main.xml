<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/vivi"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Enter your ID"
        android:textSize="23dp"
        android:textColorHint="@color/abc_secondary_text_material_dark"
        android:textColor="#fdfcfc"
        android:background="#40ffffff"
        android:layout_above="@+id/editText2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textStyle="normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:textSize="23dp"
        android:hint="Password"
        android:textColorHint="#c4e1ed"
        android:textColor="#fefcfc"
        android:background="#39fbf9f9"
        android:textStyle="normal"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_alignEnd="@+id/editText"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attempt Left"
        android:id="@+id/textView2"
        android:textSize="22dp"
        android:textColor="#8ec3d5"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView"
        android:background="@color/highlighted_text_material_dark"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attempts"
        android:id="@+id/textView3"
        android:textSize="22dp"
        android:textColor="#FFD50000"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/imageView"
        android:background="@color/highlighted_text_material_light"
        android:typeface="sans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/button"
        android:layout_marginTop="30dp"
        android:background="#2fd4c1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button2"
        android:background="#2fd4c1"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/ads"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
